generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // URL do MySQL no .env
}

enum PostStatus {
  FAILED
  IMPORTED
  PROCESSED
  POSTED
}

model Post {
  id        Int        @id @default(autoincrement())
  status    PostStatus
  isActive  Boolean    @default(true)
  url       String     @db.Text
  domain    String     @db.Text
  title     String     @db.Text
  content   String     @db.LongText
  processed_title     String?     @db.Text
  processed_content   String?     @db.LongText
  processed_seo_content   String?     @db.LongText
  processed_image_id   Int?
  processed_image_url   String?     @db.Text
  processed_post_url   String?     @db.Text
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}
